<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "Review World", root_path, class:"navbar-brand"%>
      </div>
      
      <ul class="nav navbar-nav">
        <li>
          <%= link_to "Add a new review", new_movie_path, class:"navbar-brand" %>
        </li>
      </ul>
      
      <ul class="nav navbar-nav navbar-right"
        <% if !user_signed_in? %>
          <li>
            <%= link_to "Sign Up", new_user_registration_path, class:"navbar-brand" %>
          <li>
        <% end %>
        <% if user_signed_in? %>
          <li>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class:"navbar-brand" %>
          </li>
        <% else %>
          <%= link_to "Log In", new_user_session_path, class:"navbar-brand" %>
        <% end %>
      </ul>
        
      
    </div>  
  </nav>
  
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= yield %>

</body>
</html>
